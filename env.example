# Environment configuration for Open Source Project Generator
# Copy this file to .env and customize for your setup
# WARNING: Never commit .env files with actual tokens or sensitive data!

# =============================================================================
# Docker Registry Configuration
# =============================================================================
DOCKER_REGISTRY=ghcr.io

# GitHub Configuration
# These will be automatically detected from your git config, but you can override them
GITHUB_REPOSITORY_OWNER=cuesoftinc
GITHUB_ACTOR=your-github-username

# GitHub Token (for pushing to registry)
# SECURITY WARNING: Keep this secret! Never commit actual tokens!
# Get this from https://github.com/settings/tokens with packages:write permission
# GITHUB_TOKEN=ghp_your_token_here

# =============================================================================
# Project Configuration
# =============================================================================
# Basic project information
GENERATOR_PROJECT_NAME=my-awesome-project
GENERATOR_ORGANIZATION=mycompany
GENERATOR_DESCRIPTION=An awesome open source project
GENERATOR_LICENSE=MIT
GENERATOR_AUTHOR=John Doe
GENERATOR_EMAIL=john@example.com
GENERATOR_REPOSITORY=https://github.com/mycompany/my-awesome-project

# =============================================================================
# Generation Options
# =============================================================================
# Control generation behavior
GENERATOR_FORCE=false                # Overwrite existing files without prompting
GENERATOR_MINIMAL=false              # Generate minimal project structure
GENERATOR_OFFLINE=false              # Work without internet connectivity
GENERATOR_UPDATE_VERSIONS=true       # Update dependency versions to latest
GENERATOR_INCLUDE_EXAMPLES=true      # Include example code and documentation
GENERATOR_NON_INTERACTIVE=false      # Run in non-interactive mode (for CI/CD)

# =============================================================================
# Component Selection
# =============================================================================
# Enable/disable project components
GENERATOR_FRONTEND=true              # Generate frontend applications
GENERATOR_BACKEND=true               # Generate backend API server
GENERATOR_MOBILE=false               # Generate mobile applications
GENERATOR_INFRASTRUCTURE=true        # Generate infrastructure configurations

# Frontend components
GENERATOR_FRONTEND_MAIN_APP=true     # Main application
GENERATOR_FRONTEND_HOME=true         # Landing page
GENERATOR_FRONTEND_ADMIN=false       # Admin dashboard

# Backend components
GENERATOR_BACKEND_API=true           # REST API
GENERATOR_BACKEND_AUTH=true          # Authentication system

# Mobile components
GENERATOR_MOBILE_ANDROID=false       # Android application
GENERATOR_MOBILE_IOS=false           # iOS application

# Infrastructure components
GENERATOR_INFRASTRUCTURE_DOCKER=true      # Docker configurations
GENERATOR_INFRASTRUCTURE_KUBERNETES=true  # Kubernetes manifests
GENERATOR_INFRASTRUCTURE_TERRAFORM=false  # Terraform IaC

# =============================================================================
# Generator Configuration
# =============================================================================
# Logging and output
GENERATOR_LOG_LEVEL=info             # Log level: debug, info, warn, error
GENERATOR_VERBOSE=false              # Enable verbose output
GENERATOR_QUIET=false                # Suppress non-essential output
GENERATOR_DEBUG=false                # Enable debug mode

# Output configuration
GENERATOR_OUTPUT_PATH=./output       # Output directory for generated projects
GENERATOR_OUTPUT_FORMAT=text         # Output format: text, json

# Directory paths (relative paths work cross-platform)
GENERATOR_CONFIG_DIR=./.config/generator    # Configuration directory
GENERATOR_CACHE_DIR=./.cache/generator      # Cache directory for offline mode
GENERATOR_TEMPLATE_DIR=./templates          # Custom template directory

# =============================================================================
# Template Configuration
# =============================================================================
# Template management
GENERATOR_TEMPLATE_SOURCE=embedded   # Template source: embedded, custom, remote
GENERATOR_TEMPLATE_VALIDATE=true     # Validate templates before processing
GENERATOR_TEMPLATE_CACHE=true        # Cache templates for offline use

# =============================================================================
# Validation and Security
# =============================================================================
# Security and validation options
GENERATOR_VALIDATE_PATHS=true        # Validate and sanitize file paths
GENERATOR_SECURITY_SCAN=true         # Run security scans on generated projects
GENERATOR_BACKUP_ENABLED=true        # Create backups before overwriting files

# =============================================================================
# CI/CD Configuration
# =============================================================================
# Settings for automated pipelines
# CI=true                            # Automatically detected in CI environments
# GENERATOR_NON_INTERACTIVE=true     # Required for CI/CD pipelines
# GENERATOR_FORCE=true               # Skip confirmation prompts
# GENERATOR_OUTPUT_FORMAT=json       # Machine-readable output

# =============================================================================
# Platform-Specific Paths (Examples)
# =============================================================================
# Linux/macOS:
# GENERATOR_CONFIG_DIR=~/.config/generator
# GENERATOR_CACHE_DIR=~/.cache/generator

# Windows:
# GENERATOR_CONFIG_DIR=%APPDATA%\generator\config
# GENERATOR_CACHE_DIR=%LOCALAPPDATA%\generator\cache

# Docker:
# GENERATOR_CONFIG_DIR=/home/generator/.config/generator
# GENERATOR_CACHE_DIR=/home/generator/.cache/generator
