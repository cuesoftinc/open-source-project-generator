apiVersion: v1
kind: Secret
metadata:
  name: {{.Name}}-secret
  namespace: {{.Name}}
type: Opaque
data:
  # Base64 encoded values - replace with actual values
  DB_USER: {{`{{ .Values.database.user | b64enc }}`}}
  DB_PASSWORD: {{`{{ .Values.database.password | b64enc }}`}}
  JWT_SECRET: {{`{{ .Values.jwt.secret | b64enc }}`}}
  REDIS_PASSWORD: {{`{{ .Values.redis.password | b64enc }}`}}