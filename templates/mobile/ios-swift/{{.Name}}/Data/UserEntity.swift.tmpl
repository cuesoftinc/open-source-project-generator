import Foundation
import SwiftData

@Model
class UserEntity {
    @Attribute(.unique) var id: String
    var email: String
    var name: String
    var avatarUrl: String?
    var createdAt: Date
    var updatedAt: Date
    
    init(id: String, email: String, name: String, avatarUrl: String?, createdAt: Date, updatedAt: Date) {
        self.id = id
        self.email = email
        self.name = name
        self.avatarUrl = avatarUrl
        self.createdAt = createdAt
        self.updatedAt = updatedAt
    }
    
    func toUser() -> User {
        return User(
            id: id,
            email: email,
            name: name,
            avatarUrl: avatarUrl,
            createdAt: createdAt,
            updatedAt: updatedAt
        )
    }
    
    static func from(_ user: User) -> UserEntity {
        return UserEntity(
            id: user.id,
            email: user.email,
            name: user.name,
            avatarUrl: user.avatarUrl,
            createdAt: user.createdAt,
            updatedAt: user.updatedAt
        )
    }
}